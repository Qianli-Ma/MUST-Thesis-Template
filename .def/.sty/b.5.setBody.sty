\RequirePackage{parskip} 

 
% 设置段落的间距,会影响参考文献条目之间的间距
\setlength{\parskip}{10pt}
% 如果为英文写作环境,正文无缩进
\setlength{\parindent}{2 em}
 


% [ref] (https://mirrors.concertpass.com/tex-archive/macros/latex/contrib/enumitem/enumitem.pdf)
\RequirePackage{enumitem}
% 无序枚举全局样式设置
\setitemize{
    itemsep=-0em,
    partopsep=0pt,
    parsep=0pt,
    topsep=-10pt,
    leftmargin =1.5em
}
% 有序枚举全局样式设置,
\setenumerate{
    noitemsep,
    nosep,
    labelsep=0em,
    widest=III,
    align=left,
    leftmargin=1.5em
}




