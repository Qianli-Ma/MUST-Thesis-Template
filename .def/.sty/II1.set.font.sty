% 導入 xeCJK 宏包，編譯方式設定為 xelatex
\RequirePackage[T1]{fontenc}
\RequirePackage{fontspec}
\setmainfont{Times New Roman}
\setsansfont{Times New Roman}
\setmonofont{Times New Roman}


\RequirePackage{xeCJK}
% 設置中文主要字體為 KaiTi，並指定字體文件路徑，同時設置自動偽斜體和偽粗體
\setCJKmainfont[
    Path = \resourcePath,
    AutoFakeSlant = 0.2,
    AutoFakeBold = 2.17
]{KaiTi}

% % 設置中文等寬字體為 KaiTi，並指定字體文件路徑，同時設置自動偽斜體和偽粗體
\setCJKmonofont[
    Path = \resourcePath,
    AutoFakeSlant = 0.2,
    AutoFakeBold = 2.17
]{KaiTi}

% % 設置中文無襯線字體為 KaiTi，並指定字體文件路徑，同時設置自動偽斜體和偽粗體
\setCJKsansfont[
    Path = \resourcePath,
    AutoFakeSlant = 0.2,
    AutoFakeBold = 2.17
]{KaiTi}

