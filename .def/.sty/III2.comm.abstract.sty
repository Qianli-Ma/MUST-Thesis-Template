\newenvironment{abstract@cn}[1]{
    \clearpage
    \pagenumbering{Roman}
    \setcounter{page}{1}
    \chapter*{摘~要}
    \markboth{摘要}{}
    \addcontentsline{toc}{chapter}{\hspace{-3.38 em}摘要} 
    \def\ii{#1}
    }{
    \par\noindent \textbf{關鍵字：} \ii
}




\newenvironment{abstract@en}[1]{
    \chapter*{\fontsize{18 pt}{\baselineskip}\selectfont Abstract}%
    \markboth{Abstract}{}%
    \addcontentsline{toc}{chapter}{\hspace{-3.35 em}Abstract}%
    \setlength{\parindent}{0 em}
    \def\ii{\normalsize\linespread{1.08333333333333}\selectfont #1}%
    \normalsize\linespread{1.08333333333333}\selectfont%
    }{\par\noindent \textbf{\normalsize\linespread{1.08333333333333}\selectfont Key words:} \ii \setlength{\parindent}{2 em}
}
