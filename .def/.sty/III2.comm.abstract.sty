\newcommand{\setenchapter}[1]{
    \chapter*{\fontsize{18 pt}{\baselineskip}\selectfont #1}
    \markboth{#1}{}
    \addcontentsline{toc}{chapter}{\hspace{\hdis em}#1} 
}
\newcommand{\setcnchapter}[1]{
    \chapter*{#1}
    \markboth{#1}{}
    \addcontentsline{toc}{chapter}{\hspace{\hdis em}#1} 
}





