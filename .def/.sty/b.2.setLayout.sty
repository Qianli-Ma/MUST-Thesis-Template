\RequirePackage {geometry}
\def\ileft  {3.8}
\def\iright{2.5}
\geometry{
    % showframe,
    papersize={21cm,29.7cm},
    left= \ileft cm, 
    right= \iright cm, 
    top= 2.5 cm, 
    bottom= 2.5 cm,
    headheight = 0.6 cm,
    headsep = 1 em,
    footnotesep = 2 em,
    footskip = 25 pt
}
\RequirePackage{fancyhdr}
\ifwriteqEn
    \renewcommand{\headrulewidth}{0 pt}
\else
