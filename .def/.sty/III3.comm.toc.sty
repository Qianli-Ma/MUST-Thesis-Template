\newcommand{\addtableofcontents}{
        \clearpage
        \ifwriteqEn
            \renewcommand{\contentsname}{CONTENT}
            \markboth{CONTENT}{}
            \tableofcontents
        \else
            \renewcommand{\contentsname}{目錄}
            \markboth{目錄}{}
            \tableofcontents
        \fi

        % 正文
        \clearpage
        \pagestyle{fancy}
        \pagenumbering{arabic}
        \setcounter{page}{1}
}
