% 设置英文标题样式
\newcommand{\setenchapter}[1]{
    \chapter*{\fontsize{18 pt}{\baselineskip}\selectfont #1}
    \markboth{#1}{}
    \addcontentsline{toc}{chapter}{\hspace{\hdis em}#1} 
}

% 设置中文标题样式
\newcommand{\setcnchapter}[1]{
    \chapter*{#1}
    \markboth{#1}{}
    \addcontentsline{toc}{chapter}{\hspace{\hdis em}#1} 
}


% 中文摘要
\newenvironment{abstract@cn}[1]{
    \clearpage
    \pagenumbering{Roman}
    \setcounter{page}{1}
    \setcnchapter{摘~要}
    \def\ii{#1}
    }{
    \par\noindent \textbf{關鍵字：} \ii
}

