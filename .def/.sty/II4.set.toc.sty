\RequirePackage{titletoc}
\setcounter{tocdepth}{1}

% 英文写作环境下,标题样式设置,精调数值如无必要不要改动
\ifwriteqEn
    \titlecontents{chapter}
        [8.4 em] %\bfseries
        {\fontsize{14 pt}{24.1379310344828 pt}\selectfont}
        {\contentslabel[\bfseries Chapter \thecontentslabel]{7em}}
        {}
        {\titlerule*[0.5pc]{$\cdot$}\contentspage}
        []
    \titlecontents{section}
        [4 em]
        {\fontsize{14 pt}{24.1379310344828 pt}\selectfont  }
        {\contentslabel[\thecontentslabel]{2 em}}
        {}
        {\titlerule*[0.5pc]{$\cdot$}\contentspage}
        []
% 中文写作环境下,标题样式设置,精调数值如无必要不要改动
\else
    \titlecontents{chapter}
        [3.4 em] %\bfseries
        {\fontsize{14pt}{\baselineskip}\selectfont}
        {\contentslabel[第\thecontentslabel 章]{3.5 em}}
        {}
        { \titlerule*[0.5pc]{$\cdot$}\contentspage}
        []
    \titlecontents{section}
        [4.8 em]
        {\fontsize{14 pt}{\baselineskip}\selectfont}
        {\contentslabel[第\thecontentslabel 节]{3.5 em}}
        {}
        {\titlerule*[0.5pc]{$\cdot$}\contentspage}
        []
\fi

% 取消大章节图表条目之间的垂直空白间距
\renewcommand*{\addvspace}[1]{}

\ifwriteqEn
    % 修改图目录样式
    \titlecontents{figure} % 修改图目录条目格式
        [0pt] % 左边距
        {\addvspace{0em}} % 行间距
        {Fig \thecontentslabel\hspace{1em}}  % 标签格式与宽度
        {} % 无标题格式
        {\titlerule*[8pt]{.}\contentspage} % 索引页码样式
\else
    % 修改图目录样式
    \titlecontents{figure} % 修改图目录条目格式
        [0pt] % 左边距
        {\addvspace{0em}} % 行间距
        {图\thecontentslabel\hspace{1em}} % 标签格式与宽度
        {} % 无标题格式
        {\titlerule*[8pt]{.}\contentspage} % 填充符和页码
\fi


